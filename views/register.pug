extends layout

block content
    //.main.container.row
    .row
        .col-md-8.col-md-offset-2
            h1.display-4.m-b-2 Sign Up

            //register form
            form(action='/register' method='POST')
                div.form-group
                    label(for='name') Name:
                    input#name.form-control(type='text' name='name' placeholder='first and last')
                div.form-group
                    label(for='email') Email:
                    input#email.form-control(type='text' name='email' placeholder='name@email.com')
                div.form-group
                    label(for='favoriteBook') Favorite Book:
                    input#favoriteBook.form-control(type='text' name='favoriteBook' placeholder='title of book')
                div.form-group
                    label(for='pw') Password:
                    input#pw.form-control(type='password' name='password')
                div.form-group
                    label(for='pw2') Confirm Password:
                    input#pw2.form-control(type='password' name='confirmPassword')
                button.btn.btn-primary(type='submit') Sign up